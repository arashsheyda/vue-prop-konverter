{
  "name": "vue-prop-konverter",
  "displayName": "Vue Prop Konverter",
  "icon": "resources/icon.png",
  "description": "Converts Vue defineProps({}) object syntax to TypeScript-safe defineProps<>() syntax with destructuring.",
  "publisher": "arashsheyda",
  "version": "0.0.11",
  "repository": {
    "url": "https://github.com/arashsheyda/vue-prop-konverter",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:vue"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "vue",
        "extensions": [
          ".vue"
        ]
      }
    ],
    "commands": [
      {
        "command": "vue-prop-konverter.convertProps",
        "title": "Convert defineProps to Type-safe syntax"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -watch -p .",
    "test": "vitest",
    "publish": "pnpm run test && pnpm run build",
    "test:open": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@types/node": "^24.7.2",
    "@types/vscode": "^1.105.0",
    "@vitest/ui": "3.2.4",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "semantic-release": "^25.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  }
}
